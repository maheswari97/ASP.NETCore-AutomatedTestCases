@model IEnumerable<ShopDataModel.Model.PhoneList>

<br />
<div class="backgroundWhite">
    <h2 class="text-info"> Phone List</h2>
    <br />
    <div>
        @if (Model.Count() > 0)
        {
            <table class="table table-striped border">
                <tr class="table-secondary">
                    <th>
                        Id
                    </th>
                    <th>
                        Phone Model
                    </th>
                    <th>
                        Phone Price
                    </th>

                </tr>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @item.Id
                        </td>
                        <td>
                            @item.PhoneModel
                        </td>
                        <td>
                            @item.PhonePrice
                        </td>

                    </tr>
                }
            </table>
        }
        else
        {
            <p>No Stock exists...</p>
        }
    </div>
</div>